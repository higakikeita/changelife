.chat-main
  .main-header
    .main-header__left-box 
      name
      
    .main-header__edit-btn 
      =link_to "Edit" , "#",class:"edit-btn"
  .messages
    test
    
  .form
    .form__new-message
      .form__new-message__input-box
        .form__new-message__input-box__text 
          %input{type:"text"}
        .form__new-message__input-box__image
          %label{class: "form__new-message__input-box__image"} 
            = icon("fas","image", class:"icon")
            %input{type:"file",class:"hidden"} 
      .form__new-message__submit-btn SEND
    
